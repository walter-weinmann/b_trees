{cover_enabled, true}.
{ct_dir, "ct"}.
{ct_log_dir, "ct/logs"}.
{dialyzer_plt_location, local}.
{dialyzer_warnings, [
                     error_handling,
                     overspecs,
                     race_conditions,
                     specdiffs,
                     underspecs,
                     unknown,
                     unmatched_returns
                    ]}.
{eunit_opts, [
              {skip_deps, true},
              verbose
             ]}.
{eunit_exclude_deps, true}.
{xref_checks, [
               deprecated_functions,
               deprecated_function_calls,
               exports_not_used,
               locals_not_used,
               undefined_functions,
               undefined_function_calls
              ]}.
